{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "public"
            }
        },
        {
            "src": "api/index.php",
            "use": "vercel-php@0.7.3",
            "config": {
                "build": [
                    "composer install --no-dev --optimize-autoloader",
                    "echo '--- Attempting to run php artisan key:generate ---'",
                    "php artisan key:generate --force",
                    "echo '--- Attempting to run php artisan config:cache ---'",
                    "php artisan config:cache",
                    "echo '--- Attempting to run php artisan route:cache ---'",
                    "php artisan route:cache",
                    "echo '--- Attempting to run php artisan view:cache ---'",
                    "php artisan view:cache",
                    "echo '--- Attempting to run php artisan event:cache ---'",
                    "php artisan event:cache",
                    "echo '--- Attempting to run vendor:publish for L5-Swagger ---'",
                    "php artisan vendor:publish --provider=\"L5Swagger\\L5SwaggerServiceProvider\" --tag=\"l5-swagger-assets\" --force",
                    "echo '--- Attempting to run l5-swagger:generate ---'",
                    "php artisan l5-swagger:generate",
                    "echo '--- PHP build script commands finished ---'"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/build/(.*)",
            "headers": { "Cache-Control": "public, max-age=31536000, immutable" },
            "dest": "/build/$1"
        },
        {
            "src": "/(favicon\\.ico|robots\\.txt|images/.*|css/.*|js/.*)",
            "headers": { "Cache-Control": "public, max-age=86400" },
            "dest": "/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ],
    "env": {
        "APP_NAME": "ForumLite API",
        "APP_ENV": "production",
        "APP_DEBUG": "false",
        "APP_URL": "https://forum-lite-api.vercel.app",
        "APP_CONFIG_CACHE": "/tmp/config.php",
        "APP_EVENTS_CACHE": "/tmp/events.php",
        "APP_PACKAGES_CACHE": "/tmp/packages.php",
        "APP_ROUTES_CACHE": "/tmp/routes.php",
        "APP_SERVICES_CACHE": "/tmp/services.php",
        "CACHE_DRIVER": "array",
        "LOG_CHANNEL": "stderr",
        "SESSION_DRIVER": "array",
        "VIEW_COMPILED_PATH": "/tmp/views",
        "NODE_PATH": "node",
        "VITE_APP_ENV": "${APP_ENV}",
        "L5_SWAGGER_CONST_HOST":"${APP_URL}"
    }
}
